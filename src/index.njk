---
title: Covid-19 News
layout: base.njk
---

<div class="container">
  <h1>Covid-19 Headlines</h1>
  <div class="vibe"></div>

  <ul>
    {% for article in news.articles %}
    <li>
     <img src="{{article.urlToImage}}" alt="{{article.title}}">
      <a href="{{article.url}}" class="title">
        {{article.title}}</a>
        <div class="meta" >
          
          <span class="source">{{article.source.name}}</span>
          <span class="date">{{article.publishedAt | truncate(10, true, "") }}</span>
         
        </div>
      </li>
  
    {% endfor %}
  </ul>
 
</div>
<script src="/js/vibe.js"></script>
